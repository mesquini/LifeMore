    <script type="text/javascript">
        function calcularIMC() {

            var peso = document.getElementById("peso").innerText;

            var alt = document.getElementById("alt").innerText;

  var IMC = peso / (alt * alt)

    if (IMC <18.5)
        document.getElementById("massacor").innerText = IMC.toFixed(3) + " - Peso Baixo, procure um especialista! ";
    if (IMC >=18.5 && IMC <=24.9)
        document.getElementById("massacor").innerText = IMC.toFixed(3) + " - Peso Ideal, continue assim! ";
    if (IMC >=25 && IMC <=29.9)
        document.getElementById("massacor").innerText = IMC.toFixed(3) + " - Acima do Peso, cuide melhor da sua alimentação! ";
    if (IMC >= 30 && IMC <= 34.9)
        document.getElementById("massacor").innerText = IMC.toFixed(3) + " - Obesidade Tipo I, procure um especialista urgente!  ";
    if (IMC >= 35 && IMC <= 39.9)
        document.getElementById("massacor").innerText = IMC.toFixed(3) + " - Obesidade Tipo II, procure um especialista urgente!  ";
    if (IMC >= 40 && IMC <= 49.9)
        document.getElementById("massacor").innerText = IMC.toFixed(3) + " - Obesidade Mórbida, procure um especialista urgente!  ";
    if (IMC > 40)
        document.getElementById("massacor").innerText = IMC.toFixed(3) + " - Obesidade Extrema, procure um especialista urgente!  ";
    }

// End -->
    </script>
